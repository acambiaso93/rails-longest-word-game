<div class="container mt-3">
  <h1>New Game</h1>
  <div class="d-flex gap-3">
    <% @letters.each do |letter| %>
      <div class="letter d-inline-flex p-2 bg-primary mt-2"><%= letter %></div>
    <% end %>
  </div>

  <div class="form">
    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <label class="mb-2" for="input">What is the longest word you can find?</label><br>
      <div class="d-inline-flex">
        <input class="form-control" type="text" name="word">
        <input class="btn btn-light btn-outline-secondary" type="submit" value="Play">
      </div>
    </form>
  </div>
</div>
